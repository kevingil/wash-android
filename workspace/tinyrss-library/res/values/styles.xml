<?xml version="1.0" encoding="utf-8"?>
<resources>
	
	<!-- Feed List -->
    <style name="FeedList" parent="@android:style/Widget.ListView.White">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
	</style>
    <style name="FeedListItem" parent="@android:style/Widget">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/feed_text</item>
        <item name="android:padding">16dp</item>
        <item name="android:shadowColor">#aaa</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:gravity">center</item>
	</style>
    <style name="FeedItemTitle" parent="@android:style/Widget">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/feed_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
	</style>
    <style name="FeedItemAuthor" parent="@android:style/Widget">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/feed_text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="FeedItemDate" parent="@android:style/Widget">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/feed_text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">italic</item>
	</style>
    <style name="FeedItemDescription" parent="@android:style/Widget">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/feed_text</item>
        <item name="android:textSize">12sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
	</style>
    <style name="FeedItemImage" parent="@android:style/Widget">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:paddingRight">12dp</item>
	</style>
	
</resources>