<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <style name="TitleBarOperation">
        <item name="android:layout_width">32dip</item>
        <item name="android:layout_height">49dip</item>
    </style>
  
    <style name="KevinActionBar">
        <item name="android:layout_height">49dip</item>
        <item name="android:background">#eee</item>
    </style>
    
    <style name="ActionBarText">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#dd0000</item>
        <item name="android:background">@null</item>
    </style> 
   
    <style name="Theme.Kevin" parent="Theme.Sherlock">
       <item name="actionBarStyle">@style/Widget.Styled.ActionBar</item>
       <item name="android:actionBarStyle">@style/Widget.Styled.ActionBar</item>
       
       <item name="homeAsUpIndicator">@null</item>
       <item name="android:homeAsUpIndicator">@null</item>
       
       <item name="android:windowBackground">@color/windowcolor</item>
       <item name="android:cacheColorHint">#EBEBEB</item>
       
    </style>
    <style name="Widget.Styled.ActionBar" parent="Widget.Sherlock.ActionBar">
       <item name="background">#eee</item>
       <item name="android:background">#eee</item>
       
       <item name="icon">@drawable/no_color</item>
       <item name="android:icon">@drawable/no_color</item>
       
       <item name="titleTextStyle">@style/NoTitleText</item>
       <item name="android:titleTextStyle">@style/NoTitleText</item>
       
       <item name="subtitleTextStyle">@style/NoTitleText</item>
       <item name="android:subtitleTextStyle">@style/NoTitleText</item>
    </style>
    
    <style name="Theme.Kevin.NoActionBar" parent="Theme.Kevin">
        <item name="android:windowActionBar">false</item>
    </style>

<style name="NoTitleText">
        <item name="android:textSize">0sp</item>
        <item name="android:textColor">#00000000</item>
</style>
    
      <style name="DashboardButton">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">100dip</item>
        <item name="android:layout_height">100dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:drawablePadding">0dp</item>
        <item name="android:textSize">@dimen/dashboard_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#B8B8B8</item>
        <item name="android:background">@null</item>
    </style>
      
</resources>